<div id="tags" data-hook="show_tags_on_resource">
  <% @product.tags.where(display: true).each do |tag| %>
    <%= link_to tag_path(tag) do %>
        <div class="tag tag-<%= tag.id %>" style="background-color: <%= tag.color %>;">
            <%= tag.name %>
        </div>
    <% end %>
  <% end %>
</div>