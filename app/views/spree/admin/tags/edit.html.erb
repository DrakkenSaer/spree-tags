<% content_for :page_title do %>
  <%= Spree.t(:editing_tag) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_tags_list), spree.admin_tags_path, class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<div data-hook="admin_tag_edit_form_header">
  <%= render partial: 'spree/shared/error_messages', locals: { target: @tag } %>
</div>

<div data-hook="admin_tag_edit_form">
  <%= form_for [:admin, @tag] do |f| %>
    <fieldset class="no-border-top">
      <%= render partial: 'form', locals: { f: f } %>
      <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
  <% end %>
</div>